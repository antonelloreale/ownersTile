{
  "extends": [
    "eslint-config-fifthbeat"
  ],
  "env": {
    "es6": true,
    "browser": true
  },
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "trailingComma": "es5",
        "bracketSpacing": false,
        "jsxBracketSameLine": true,
        "parser": "flow",
        "tabWidth": 2
      }
    ],
    "no-console": ["warn", { "allow": ["warn", "error"] }]
  }
}